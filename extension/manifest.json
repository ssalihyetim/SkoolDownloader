{
  "manifest_version": 3,
  "name": "Skool Video Downloader",
  "version": "1.0.0",
  "description": "Download Wistia and Loom videos from Skool courses for offline viewing",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.skool.com/*",
    "https://stream.video.skool.com/*",
    "https://*.wistia.com/*",
    "https://*.wistia.net/*",
    "https://*.loom.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.skool.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
